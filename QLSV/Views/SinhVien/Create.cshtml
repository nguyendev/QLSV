@model QLSV.Models.SinhVien
@{
    ViewData["Title"] = "Tạo mới";
    ViewData["Heading"] = "Tạo mới";
    ViewData["SmallHeading"] = "";
    ViewData["BreadcrumbOne"] = "QLSV";
    ViewData["BreadcrumbTwo"] = "Sinh viên";
    ViewData["BreadcrumbThree"] = "Tạo thông tin mới";
    ViewData["BoxTitle"] = "Tạo thông tin mới";
    ViewData["Search"] = "Tìm sinh viên";
    Layout = "_CreateLayout";
}
<div class="form-horizontal">
    <div class="row text-center">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Mssv" class="col-md-2 control-label"></label>
            <div class="col-md-9">
                <input asp-for="Mssv" class="form-control" />
                <span asp-validation-for="Mssv" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Hoten" class="col-md-2 control-label"></label>
            <div class="col-md-9">
                <input asp-for="Hoten" class="form-control" />
                <span asp-validation-for="Hoten" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Namsinh" class="col-md-2 control-label"></label>
            <div class="col-md-9">
                <div class="input-group date">
                    <div class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </div>
                    <input asp-for="Namsinh" type="text" class="form-control pull-right datepicker">
                    <span asp-validation-for="Namsinh" class="text-danger"></span>
                </div>
                <!-- /.input group -->
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Gioitinh" class="col-md-2 control-label"></label>
            <div class="col-md-9">
                <select asp-for="Gioitinh" class="form-control" asp-items="@(new SelectList(@ViewBag.GioiTinh,"Id","FullName") )"></select>
                <span asp-validation-for="Gioitinh" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Sdt" class="col-md-2 control-label"></label>
            <div class="col-md-9">
                <input asp-for="Sdt" type="number" class="form-control" />
                <span asp-validation-for="Sdt" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="col-md-2 control-label"></label>
            <div class="col-md-9">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Diachi" class="col-md-2 control-label"></label>
            <div class="col-md-9">
                <input asp-for="Diachi" class="form-control" />
                <span asp-validation-for="Diachi" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Nganh" class="col-md-2 control-label"></label>
            <div class="col-md-9">
                <input asp-for="Nganh" class="form-control" />
                <span asp-validation-for="Nganh" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Lop" class="col-md-2 control-label"></label>
            <div class="col-md-9">
                <input asp-for="Lop" class="form-control" />
                <span asp-validation-for="Lop" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Hinhanh" class="col-md-2 control-label"></label>
            <div class="col-md-9">
                <input asp-for="Hinhanh" type="url" class="form-control" />
                <span asp-validation-for="Hinhanh" class="text-danger"></span>
            </div>
        </div>
    </div>
</div>
