@model QLSV.Extension.PaginatedList<QLSV.Models.DangKy>

@{
    ViewData["Title"] = "Index";
    ViewData["Heading"] = "Đăng ký";
    ViewData["SmallHeading"] ="";
    ViewData["BreadcrumbOne"] = "QLSV";
    ViewData["BreadcrumbTwo"] = "Đăng ký";
    ViewData["BreadcrumbThree"] = "Danh sách đăng ký";
    ViewData["BoxTitle"] = "Danh sách đăng ký";
    ViewData["Search"] = "Tìm học phần";
    Layout = "_TableIndexLayout";
}

<div class="row">
    <div class="col-sm-12">
        <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
            <thead>
                <tr role="row">
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["MaHpParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(model => model.t.Mahp)</a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["MaSvParm"]">@Html.DisplayNameFor(model => model.t.Mssv)</a>
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr role="row">
                        <td>
                            @Html.DisplayFor(modelItem => item.Mahp)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mssv)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Mahp" class="btn btn-warning fa fa-edit"> Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.Mahp" class="btn btn-success fa fa-newspaper-o"> Xem</a>
                            <a asp-action="Delete" asp-route-id="@item.Mahp" class="btn btn-danger fa fa-remove"> Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
            @*<tfoot>
                    <tr>
                    <th rowspan="1" colspan="1">Rendering engine</th>
                    <th rowspan="1" colspan="1">Browser</th>
                    <th rowspan="1" colspan="1">Platform(s)</th>
                    <th rowspan="1" colspan="1">Engine version</th>
                    <th rowspan="1" colspan="1">CSS grade</th></tr>
                </tfoot>*@
        </table>
    </div>
</div>
<div class="row">
    <div class="col-sm-5">
        <div class="dataTables_info" id="example1_info" role="status" aria-live="polite">
            @*Hiển thị 1 to 10 trong 57 entries*@
        </div>
    </div>
    <div class="col-sm-7">
        <div class="dataTables_paginate paging_simple_numbers" id="example1_paginate">
            <ul class="pagination">
                @{
                    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                }



                <li class="paginate_button previous disabled" id="example1_previous">
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-page="@(Model.PageIndex - 1)"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       class="btn btn-default @prevDisabled btn">
                        Trước
                    </a>
                </li>
                <li class="paginate_button">
                    @if (Model.PageIndex - 2 > 0)
                    {
                        <a asp-action="Index"
                           asp-route-sortOrder="@ViewData["CurrentSort"]"
                           asp-route-page="@(Model.PageIndex -2)"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                           class="btn btn-default @nextDisabled btn">
                            @(Model.PageIndex - 2)
                        </a>
                    }
                </li>
                <li class="paginate_button ">
                    @if (Model.PageIndex - 1 > 0)
                    {
                        <a asp-action="Index"
                           asp-route-sortOrder="@ViewData["CurrentSort"]"
                           asp-route-page="@(Model.PageIndex -1)"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                           class="btn btn-default @nextDisabled btn">
                            @(Model.PageIndex - 1)
                        </a>
                    }
                </li>
                <li class="paginate_button active">
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-page="@(Model.PageIndex)"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       class="btn btn-default @nextDisabled btn">
                        @(Model.PageIndex)
                    </a>
                </li>
                <li class="paginate_button ">
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-page="@(Model.PageIndex + 1)"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       class="btn btn-default @nextDisabled btn">
                        @(Model.PageIndex + 1)
                    </a>
                </li>
                <li class="paginate_button ">
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-page="@(Model.PageIndex + 2)"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       class="btn btn-default @nextDisabled btn">
                        @(Model.PageIndex + 2)
                    </a>
                </li>
                <li class="paginate_button next" id="example1_next">
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-page="@(Model.PageIndex + 1)"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       class="btn btn-default @nextDisabled btn">
                        Kế
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>